/box {
   10 dict begin
      /no exch def
      /y  exch def
      /x  exch def

      /x2 x 50 add def
      /y2 y no 15 mul sub def

      y2 15 add 15 y {
	dup x exch M
        x2 exch L stroke
      } for

      x y M x2 y L x2 y2 L x y2 L closepath
      stroke
   end
} def

/newbox {   % yellow mark those which are new
   4 dict begin
     /to exch def
     /from exch def
     /y exch def
     /x exch def

     gsave
       1 1 0.8 setrgbcolor  % yellow
       x y from 1 sub 15 mul sub 
       x 50 add y to 15 mul sub rect
       fill
     grestore
   end
} def

