%require "common.ps"
%require "rect.ps"

/chararray {                   % <x> <y> [(f)(o)(o)(\\0)] chararray -
   10 dict begin
      /chars exch def
      /y exch def
      /x exch def
      /len chars length def
      /cw 8 def % char width
      /w cw len mul def
      gsave
         x y translate
         0.8 LW
         0 -10 w 0 rect S
         0.4 LW
         cw cw w cw sub {
            dup 0 M -10 L S
         } for
         /Courier 6 SF
         cw 2 div -7 M
         chars {
            gsave cshow grestore
            cw 0 RM
         } forall
         /Courier 8 SF
         w 2 M (char[]) rshow
      grestore
   end
} def

