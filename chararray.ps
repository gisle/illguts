
/chararray {
   10 dict begin
      /chars exch def
      /y exch def
      /x exch def
      /len chars length def
      /cw 8 def % char width
      /w cw len mul def
      gsave
         x y translate
         0.8 setlinewidth
         0 -10 w 0 rect stroke
         0.4 setlinewidth
         cw cw w cw sub {
            dup 0 M -10 L stroke
         } for
         /Courier findfont 6 scalefont setfont
         cw 2 div -7 M
         chars {
            gsave cshow grestore
            cw 0 rmoveto
         } forall
         /Courier findfont 8 scalefont setfont
         w 2 M (char[]) rshow
      grestore
   end
} def

